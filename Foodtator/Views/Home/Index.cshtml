@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LandingPageLayout.cshtml";
}

@section Styles
{
    <link href="~/Content/jquery.fullPage.css" rel="stylesheet" />
}

<div id="fullpage" data-ng-controller="homeController as hc">
    <div class="section text-center" id="topSection">
        <div class="userbg">
            <div class="col-sm-offset-1 col-sm-10 col-lg-offset-4 col-lg-4 text-center">
                <br /><br /><br />
                <h1>Foodtator</h1>
                <h2>tells you where to eat!</h2>
            </div>

        </div>
    </div>

    <div class="section text-center" id="howItWorksSection">
        <div class="slide" id="slide1">
            <h1>slide 1</h1>
        </div><!-- End slide1 -->
        <div class="slide" id="slide2">
            <h1>slide 2</h1>
        </div><!-- End slide2 -->
        <div class="slide" id="slide3">
            <h1>slide 3</h1>
        </div><!-- End slide3 -->
        <div class="slide" id="slide4">
            <h1>slide 4</h1>
        </div><!-- End slide4 -->
    </div><!-- End section1 -->
    <div class="section text-center" id="contactUsSection">
        <h1>contact page</h1>
    </div><!-- End section4 -->
</div>

@section scripts{
    <script src="~/Scripts/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/jquery.fullPage.js"></script>

    <script src="~/Scripts/FoodTator/Services/UserServices.js"></script>

    <script type="text/javascript">
        (function () {
            "use strict";

            angular.module(APPNAME)
                .controller('homeController',HomeController);

            HomeController.$inject = ['$scope', '$userService'];

            function HomeController(
                $scope
                , $userService) {

                var vm = this;
                vm.$scope = $scope;
                vm.$userService = $userService;

                init();

                function init() {
                    console.log("ng page started");
                    var anchoScreen = $(window).width();

                    $('#fullpage').fullpage({
                        slidesColor: ['#00BFBB', '#939FAA', '#00CEF1'],
                        'afterLoad': function () {
                        },

                    });

                    $("#homeBtn").click(function () {
                        $.fn.fullpage.moveTo(1, 0);
                    });

                    $("#howItWorksBtn").click(function () {
                        $.fn.fullpage.moveTo(2, 0);
                    });

                    $("#contactBtn").click(function () {
                        $.fn.fullpage.moveTo(3, 0);
                    });

                   

                    $(document).on('click', '.navbar-collapse.in', function (e) {
                        if ($(e.target).is('a')) {
                            $(this).collapse('hide');
                        }
                    });


                    vm.$userService.test();
                }


            }
        })();

    </script>

}
